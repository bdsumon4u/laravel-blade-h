{
    "name": "hotash/laravel-blade-h",
    "description": "A Set Of Components For Laravel's Blade Templating Engine.",
    "keywords": [
        "hotash",
        "blade-h",
        "laravel-blade-h"
    ],
    "homepage": "https://github.com/hotashplanet/laravel-blade-h",
    "minimum-stability": "stable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sumon Ahmed",
            "email": "bdsumon4u@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "gajus/dindent": "^2.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Hotash\\BladeH\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hotash\\BladeH\\Providers\\BladeHServiceProvider"
            ],
            "aliases": {
                "BladeH": "Hotash\\BladeH\\Facades\\BladeH",
                "FormH": "Hotash\\BladeH\\Facades\\FormH",
                "SelectH": "Hotash\\BladeH\\Facades\\SelectH"
            }
        }
    }
}
